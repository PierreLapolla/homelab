{
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["^clusters/my-cluster/helmreleases/.*\\.yaml$"],
      "matchStrings": ["version:\\s*\"(?<currentValue>[^\"]+)\""],
      "depNameTemplate": "{{chart}}",
      "datasourceTemplate": "helm",
      "versioningTemplate": "semver"
    }
  ]
}
